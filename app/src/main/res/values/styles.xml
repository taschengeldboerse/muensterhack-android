<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Text24Regular" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text20Regular" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text16Regular" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text14MediumUppercase" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text14Regular" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text12Regular" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
